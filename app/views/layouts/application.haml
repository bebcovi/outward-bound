!!!
%html{lang: I18n.locale}
  %head
    %title Outward Bound &middot; #{@title}
    %meta{charset: "utf-8"}
    %link{rel: "authors", href: "humans.txt"}
    = favicon_link_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header#header
      %h1#logo= link_to t("name"), root_path
      %ol.carousel
        = image_tag "http://placekitten.com/700/350"
        = image_tag "http://placekitten.com/700/350", style: "display: none;"
        = image_tag "http://placekitten.com/700/350", style: "display: none;"
      %nav
        %ol
          - navigation_pages.each do |page|
            %li{class: (current_page?(page.path) && "active")}
              = link_to page.title, page.path
        %ul
          %li= link_to "English", locale: :en
          %li= link_to "Hrvatski", locale: :hr

      %ul#social
        %li= link_to "Facebook", "https://www.facebook.com/outwardboundcroatia", target: "_blank"
        %li= link_to "Twitter", "https://twitter.com/outwardb", target: "_blank"
        %li= link_to "YouTube", "http://www.youtube.com/user/OutwardBoundCroatia", target: "_blank"

      %ul.tweets
        - @mentions.each do |tweet|
          %cite= "@#{tweet.author}"
          %blockquote= parse_tweet(tweet.content)


    %div{role: "main"}
      = render "layouts/#{controller.send(:sub_layout)}"
