= simple_form_for [:admin, @text], defaults: {wrapper_tag: :li} do |f|

  %fieldset.inputs
    %ol
      = f.input :body_en, input_html: {rows: 15}
      = f.input :body_hr, input_html: {rows: 15}

  %fieldset.actions
    %ol
      %li= f.button :submit
      %li.cancel= link_to "Cancel", resource_path
