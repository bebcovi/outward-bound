= simple_form_for [:admin, @location], defaults: {wrapper_tag: :li} do |f|

  %fieldset.inputs
    %ol
      = f.input :image do
        .list-inline-block
          = image_tag @location.image_url(:small), height: 100 if @location.image?
          = f.input_field :image
          = f.hidden_field :image_cache

  %h2 English

  %fieldset.inputs
    %ol
      = f.input :name_en
      = f.input :description_en

  %h2 Croatian

  %fieldset.inputs
    %ol
      = f.input :name_hr
      = f.input :description_hr

  %fieldset.actions
    %ol
      %li= f.button :submit
      %li.cancel= link_to "Cancel", collection_path
