- present(post) do |post_presenter|

  %article.post_short
    %header
      = time_tag post_presenter.created_at
      %h2= post_presenter.title

    .cover
      = image_tag post_presenter.cover_photo.url(:small), alt: post_presenter.cover_photo.title

    .inner
      = post_presenter.short_body

      = link_to "Izmjeni".prepend_icon("pencil"), edit_admin_post_path(post), class: "btn"
      = link_to "Izbri≈°i".prepend_icon("remove"), admin_post_path(post), method: :delete, confirm: "Jeste li sigurni?", class: "btn-danger"
