= simple_form_for [:admin, @course], defaults: {wrapper_tag: :li} do |f|

  %fieldset.inputs
    %ol
      = f.association :category
      = f.association :album
      = f.association :application_form

  %h2 English

  %fieldset.inputs
    %ol
      = f.input :name_en
      = f.input :description_en, input_html: {rows: 15}
      = f.input :dates_en, as: :text
      = f.input :contact_en
      = f.input :price_en
      = f.input :capacity_en
      = f.input :duration_en

  %h2 Croatian

  %fieldset.inputs
    %ol
      = f.input :name_hr
      = f.input :description_hr, input_html: {rows: 15}
      = f.input :dates_hr, as: :text
      = f.input :contact_hr
      = f.input :price_hr
      = f.input :capacity_hr
      = f.input :duration_hr

  %fieldset.actions
    %ol
      %li= f.button :submit
      %li.cancel= link_to "Cancel", collection_path
