%h1.course_title= smarty_pants course.name

= link_to(image_tag(course.cover_photo.url(:medium), alt: course.cover_photo.title), course.album, class: "course_cover") if course.album

= markdown course.description

.course_info.gw
  - if course.dates?
    .dates.g.one-whole.lap-one-half.desk-one-quarter
      = icon("calendar")
      .name= t(".dates")
      .value= markdown course.dates

  - if course.duration?
    .duration.g.one-whole.lap-one-half.desk-one-quarter
      = icon("clock")
      .name= t(".duration")
      .value= days course.duration

  - if course.min_people? or course.max_people?
    .people.g.one-whole.lap-one-half.desk-one-quarter
      = icon("users")
      .name= t(".people")
      .value= "#{course.min_people}â€“#{course.max_people} #{t("misc.people")}"

  - if course.price?
    .price.g.one-whole.lap-one-half.desk-one-quarter
      = icon("coins")
      .name= t(".price")
      .value= money course.price

- if course.applyable?
  .apply_for_course
    = link_to t("misc.apply").append_icon("file-download"), apply_courses_path, class: "application_form"
    %p.send_application_form
      = t(".send_application_form")
      = mail_to("apply@outwardbound.hr") + "."
