%footer.site_footer
  .container
    .sections
      %section.contact
        %h2= t("misc.contact")
        = render "contact"

      %section.social
        %h2= t("misc.social")
        %ol
          %li.facebook
            %a{href: "https://www.facebook.com/outwardboundcroatia", target: "_blank"}
              = icon("facebook")
              %span.name Facebook
          %li.twitter
            %a{href: "https://twitter.com/outwardb", target: "_blank"}
              = icon("twitter")
              %span.name Twitter
          %li.youtube
            %a{href: "http://www.youtube.com/user/OutwardBoundCroatia", target: "_blank"}
              = icon("youtube")
              %span.name YouTube

      %section.tweets
        %h2= t("misc.tweets")
        %ol
          = render @tweets

